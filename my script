-- Services
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local lp = Players.LocalPlayer
local chr = lp.Character or lp.CharacterAdded:Wait()
local hum = chr:WaitForChild("Humanoid")

-- Flags
local isEnabled = false
local isRunning = true

-- UI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "UndergroundBypassUI"
screenGui.ResetOnSpawn = false
screenGui.Enabled = false
screenGui.Parent = lp:WaitForChild("PlayerGui")

-- Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 240, 0, 60)
frame.Position = UDim2.new(0.5, -120, 0.5, -30)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

-- Toggle Button
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 180, 0, 40)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 16
toggleButton.Text = "Underground: Disabled"
toggleButton.Parent = frame

-- Close (X) Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 25, 0, 25)
closeButton.Position = UDim2.new(1, -30, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 16
closeButton.Text = "X"
closeButton.Parent = frame

-- Toggle Button Function
toggleButton.MouseButton1Click:Connect(function()
	isEnabled = not isEnabled
	toggleButton.Text = isEnabled and "Underground: Enabled" or "Underground: Disabled"
	toggleButton.BackgroundColor3 = isEnabled and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(170, 0, 0)
end)

-- Close Button Function
closeButton.MouseButton1Click:Connect(function()
	isRunning = false
	screenGui:Destroy()
end)

-- M Key to toggle UI visibility
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if not gameProcessed and input.KeyCode == Enum.KeyCode.M then
		screenGui.Enabled = not screenGui.Enabled
	end
end)

-- Anti-Noclip Helper Function
local function isValidPosition(pos)
	local region = Region3.new(pos - Vector3.new(1, 1, 1), pos + Vector3.new(1, 1, 1))
	local parts = Workspace:FindPartsInRegion3(region, nil, math.huge)
	return #parts == 0  -- Ensure no parts are touching the position
end

-- Underground teleport loop with floating and spazzing movement (with anti-exploit)
task.spawn(function()
	while isRunning do
		task.wait(0.2)

		if not isEnabled or not hum or hum.Health > 25 then continue end

		local hrp = chr:FindFirstChild("HumanoidRootPart")
		if hrp then
			local currentPos = hrp.Position
			local rot = hrp.CFrame - hrp.Position

			-- Randomize position (floating effect)
			local floatYOffset = math.random(-7, -4)  -- Random Y offset between -4 and -7 for floating
			local randomX = math.random(-3, 3)         -- Random horizontal offset
			local randomZ = math.random(-3, 3)         -- Random horizontal offset

			-- Apply randomized floating and movement (spazzing effect)
			local targetPos = currentPos + Vector3.new(randomX, floatYOffset, randomZ)

			-- Check if target position is valid and avoid teleporting to invalid places (Anti-Noclip)
			if isValidPosition(targetPos) then
				local targetCFrame = CFrame.new(targetPos) * rot

				-- Apply smooth teleportation (Anti-Teleport/Fly protection)
				chr:PivotTo(targetCFrame)
			end
		end
	end
end)

-- Character reset handler
lp.CharacterAdded:Connect(function(newChar)
	chr = newChar
	hum = chr:WaitForChild("Humanoid")
end)
