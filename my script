-- Anti-Finish / Soft Underground Death Bypass with UI and Rotation
local lp = game:GetService("Players").LocalPlayer
local chr = lp.Character or lp.CharacterAdded:Wait()
local hum = chr:WaitForChild("Humanoid")

-- Create the UI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = lp:WaitForChild("PlayerGui")
screenGui.Name = "AntiFinishUI"

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 50)
frame.Position = UDim2.new(0.5, -100, 0.5, -25) -- Centered on screen
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui

local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 180, 0, 40)
toggleButton.Position = UDim2.new(0, 10, 0, 5)
toggleButton.Text = "Enable Soft Underground"
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
toggleButton.Parent = frame

local isEnabled = true -- The function starts enabled

-- Function to move player underground (small movement) and rotate slightly
local function softDrop()
    local hrp = chr:FindFirstChild("HumanoidRootPart")
    if hrp and isEnabled then
        local pos = hrp.Position
        local rotation = hrp.CFrame:ToEulerAnglesYXZ() -- Get current rotation (Yaw, Pitch, Roll)

        -- Move the player underground and apply slight rotation (only 1 or 2 studs to avoid anti-teleport)
        task.delay(0.05, function()
            hrp.CFrame = CFrame.new(pos.X, pos.Y - 1, pos.Z) -- Move 1 stud underground (adjustable)
            hrp.CFrame = hrp.CFrame * CFrame.Angles(0, math.rad(90), 0) -- Slight Y-axis rotation (adjust as needed)
        end)
    end
end

-- Listen for death and apply underground movement and rotation
hum.Died:Connect(function()
    if isEnabled then
        softDrop()
    end
end)

-- Enable/Disable soft drop when clicking the toggle button
toggleButton.MouseButton1Click:Connect(function()
    isEnabled = not isEnabled -- Toggle the state
    if isEnabled then
        toggleButton.Text = "Enable Soft Underground"
        toggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    else
        toggleButton.Text = "Disable Soft Underground"
        toggleButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
    end
end)

-- Make the UI draggable
local dragging = false
local dragStart
local startPos

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

frame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

frame.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- Keybind: Press "M" to toggle the UI and soft underground
local userInputService = game:GetService("UserInputService")

userInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end

    -- Check if the key pressed is "M"
    if input.KeyCode == Enum.KeyCode.M then
        -- Toggle the soft underground feature
        isEnabled = not isEnabled
        if isEnabled then
            toggleButton.Text = "Enable Soft Underground"
            toggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
        else
            toggleButton.Text = "Disable Soft Underground"
            toggleButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
        end
    end
end)
